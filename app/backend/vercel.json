{
  "version": 2,
  "builds": [
    { "src": "backend/src/server.js", "use": "@vercel/node" },
    { "src": "frontend/package.json", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/book/.*", "dest": "backend/src/server.js" },
    { "src": "/api/user/.*", "dest": "backend/src/server.js" },
    { "src": "/(.*)", "dest": "frontend/$1" }
  ],
  "env": {
    "MONGO_URI": "@env.MONGO_URI",
    "JWT_SECRET_KEY": "@env.JWT_SECRET_KEY",
    "BCRYPT_SECRET_KEY": "@env.BCRYPT_SECRET_KEY"
  }
}
